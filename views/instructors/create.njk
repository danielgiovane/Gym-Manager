{% extends 'layout.njk' %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section class="avatar" style=" width: 400px; height: 100%; background: url(https://source.unsplash.com/collection/8353395/500X500) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Novo Instrutor</h3>

      <div class="item">
        <div>Avatar url</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://">
        </div>
      </div>

      <div class="item">
        <div>Instrutor</div>
        <div>
          <input type="text" name="name" placeholder="nome">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth" placeholder="02/06">
        </div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>
          <span><input type="radio" name="genero" value="m" checked="checked">Masculino
          </span>
          <span><input type="radio" name="genero" value="f">Feminino</span>
        </div>
      </div>

      <div class="item">
        <div>Area de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Qual serviço ira prestar">
        </div>
      </div>

      <button type="submit">Salvar</button>

    </section>
  </form>

{% endblock content %}